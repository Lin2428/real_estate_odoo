<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Form View-->
    <record id="view_invoice_tracking_form" model="ir.ui.view">
        <field name="name">invoice.tracking.importation.form</field>
        <field name="model">invoice.tracking</field>
        <field name="arch" type="xml">
            <form string="Invoice Tracking">
                <header>
                    <button name="action_add_document" type="object" string="Add document" class="btn-primary"/>
                    <field name="stage_id" widget="statusbar"
                            options="{'clickable': '1', 'fold_field': 'last_stage'}"/>
                </header>
                <sheet>

                    <!--<div class="oe_button_box" name="button_box">
                        <button name="action_open_landed_cost_invoices" type="object" class="oe_stat_button" icon="fa-file-invoice">
                            <field name="cost_invoice_ids" widget="statinfo" string="Landed Cost"/>
                        </button>
                    </div>-->
                    <div class="oe_title">
                        <span class="o_form_label">Protocol Number</span>
                        <h1 class="d-flex">
                            <field name="name" readonly="1" force_save="1"/>
                        </h1>
                    </div>
                    <group string="Information sur la facture">
                        <field name="partner_id"/>
                         <field name="invoice_number"/>
                        <field name="amount"/>
                        <field name="invoice_date"/>
                        <field name="reception_date"/>
                    </group>
                    <separator string="Purchase Order"/>

                    <notebook>
                        <page string="List documents">
                            <field name="invoice_documents_ids">
                                <tree no_open="1">
                                    <field name="name"/>
                                    <field name="datas" string="Attachment" widget="attachment"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="o_attachment_preview"/>
                <chatter reload_on_post="True" reload_on_attachment="True"/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_invoice_tracking_list" model="ir.ui.view">
        <field name="name">invoice.tracking.importation.list</field>
        <field name="model">invoice.tracking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="invoice_date"/>
                <field name="name"/>
                <field name="invoice_number"/>
                <field name="partner_id"/>
                <field name="amount" widget="monetary"/>
                <field name="stage_id" options="{'color_field': 'stage_id.color'}"/>
            </tree>
        </field>
    </record>


    <!-- Action -->
    <record id="action_invoice_tracking" model="ir.actions.act_window">
        <field name="name">Invoice Tracking</field>
        <field name="res_model">invoice.tracking</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>